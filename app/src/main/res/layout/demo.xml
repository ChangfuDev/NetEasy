<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/base_color"
                android:orientation="horizontal">

	<ImageView
		android:id="@+id/iv_actionbar_back"
		android:layout_width="15dp"
		android:layout_height="30dp"
		android:layout_centerVertical="true"
		android:scaleType="fitXY"
		android:src="@drawable/actionbar_check"/>

	<ImageView
		android:scaleType="centerCrop"
		android:id="@+id/iv_actionbar_logo"
		android:layout_width="45dp"
		android:layout_height="45dp"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/iv_actionbar_back"
		android:padding="5dp"
		android:src="@drawable/actionbar_logo"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_toRightOf="@+id/iv_actionbar_logo"
		android:gravity="center_vertical"
		android:text="私人FM"
		android:textColor="@color/white"
		android:textSize="18sp"/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_alignParentRight="true"
		android:scaleType="centerInside"
		android:src="@drawable/actionbar_icn_oper"/>

</RelativeLayout>